                                        "properties": {
                                            "id": {
                                                "type": "integer"
                                            },
                                            "ticket_id": {
                                                "type": "integer"
                                            },
                                            "user_id": {
                                                "type": "integer"
                                            },
                                            "content": {
                                                "type": "string"
                                            },
